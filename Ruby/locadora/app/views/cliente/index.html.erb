<h1>CLIENTES</h1>

<p>Lista de clientes cadastrados:</p>

<% if @clientes.any? %>
  <p>Total de clientes: <%= @clientes.count %></p>

  <table border="1" cellpadding="10">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Sobrenome</th>
        <th>CPF</th>
        <th>Email</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @clientes.each do |cliente| %>
        <tr>
          <td><%= cliente.id %></td>
          <td><%= cliente.nome %></td>
          <td><%= cliente.sobrenome %></td>
          <td><%= cliente.cpf %></td>
          <td><%= cliente.email %></td>
          <td>
            <%= link_to 'Ver', cliente_path(cliente) %>
            <%= link_to 'Editar', edit_cliente_path(cliente) %>
            <%= button_to 'Remover', cliente_path(cliente), method: :delete, data: { confirm: 'Tem certeza?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Nenhum cliente cadastrado.</p>
<% end %>

<br>
<%= link_to 'Novo Cliente', new_cliente_path %>